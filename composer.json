{
    "name": "cleaner-marketing/cleaner-marketing-forms",
    "description": "Comprehensive WordPress plugin for dry cleaning and laundry service businesses",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Company Name",
            "email": "support@yourcompany.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "yahnis-elsts/plugin-update-checker": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "CleanerMarketingForms\\": "includes/"
        }
    },
    "scripts": {
        "build": [
            "@composer install --no-dev --optimize-autoloader",
            "rm -rf .git .github .gitignore composer.json composer.lock *.md tests/ .DS_Store"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}